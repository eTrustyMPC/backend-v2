{
  "name": "etrusty-backend-v2",
  "version": "2.0.0",
  "description": "eTrusty backend on LB4",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "author": "Ilia Smirnov",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "16 || 18 || 20"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo package",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "premigrate": "npm run build ",
    "migrate": "node ./dist/migrate",
    "rebuild": "npm run clean && npm run build",
    "prestart": "npm run rebuild",
    "start": "node .",
    "start:dev": "nodemon --exec \"npm start\" --watch dist/",
    "commit": "(git add .) && git-cz && (git push -o ci.skip)",
    "release-dev": "npx semantic-release --branches=dev --no-ci",
    "release": "npx semantic-release --branches=main --no-ci"
  },
  "repository": {
    "type": "git"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^10.1.5",
    "@loopback/authentication-passport": "^6.1.5",
    "@loopback/authorization": "^0.14.3",
    "@loopback/boot": "^6.1.5",
    "@loopback/context-explorer": "^0.10.3",
    "@loopback/core": "^5.1.5",
    "@loopback/filter": "^4.1.3",
    "@loopback/logging": "^0.11.3",
    "@loopback/metadata": "^6.1.3",
    "@loopback/mock-oauth2-provider": "^0.8.5",
    "@loopback/repository": "^6.1.5",
    "@loopback/repository-tests": "^0.23.3",
    "@loopback/rest": "^13.1.5",
    "@loopback/rest-crud": "^0.17.5",
    "@loopback/rest-explorer": "^6.1.5",
    "@loopback/security": "^0.10.5",
    "@loopback/service-proxy": "^6.1.5",
    "@thirdweb-dev/auth": "^4.1.0",
    "@thirdweb-dev/chains": "^0.1.65",
    "@thirdweb-dev/react": "^4.4.0",
    "@thirdweb-dev/sdk": "^4.0.28",
    "@types/jsonwebtoken": "9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth": "^1.0.45",
    "@types/passport-google-oauth2": "^0.1.8",
    "@types/passport-http": "^0.3.11",
    "@types/passport-http-bearer": "^1.0.41",
    "@types/passport-local": "^1.0.38",
    "@types/passport-oauth2": "^1.4.15",
    "@types/passport-twitter": "1.0.40",
    "body-parser": "^1.20.2",
    "casbin": "^5.27.1",
    "client-sessions": "^0.8.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jade": "^1.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "loopback-connector-postgresql": "^5.5.2",
    "loopback-connector-rest": "^4.0.3",
    "loopback4-migration": "^1.3.0",
    "passport": "^0.5.3",
    "passport-facebook": "^3.0.0",
    "passport-google": "^0.3.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.7.0",
    "passport-twitter": "1.0.4",
    "path": "^0.12.7",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@loopback/build": "^10.1.5",
    "@loopback/eslint-config": "^14.0.5",
    "@loopback/http-caching-proxy": "^5.1.5",
    "@loopback/testlab": "^6.1.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "github:semantic-release/git",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/node": "^16.18.70",
    "axios": "^1.6.5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "cz-git": "^1.8.0",
    "eslint": "^8.51.0",
    "lodash": "^4.17.21",
    "nodemon": "^3.0.1",
    "semantic-release": "^22.0.5",
    "semantic-release-cli": "^5.4.4",
    "source-map-support": "^0.5.21",
    "typescript": "~5.2.2"
  },
  "release": {
    "branches": [
      "main",
      "dev"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "Changelog"
        }
      ],
      "@semantic-release/git",
      "@semantic-release/npm"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": ".commitlintrc.json"
    }
  }
}
