{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "etrusty-backend",
  "description": "Backend API Server based on Loopback 4.x",
  "version": "2.0.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "eTrusty",
  "repository": {
    "type": "git"
  },
  "engines": {
    "node": "18 || 20"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo package",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\"",
    "prettier:check": "yarn run prettier:cli -- -l",
    "prettier:fix": "yarn run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "yarn run eslint -- --fix",
    "pretest": "yarn run rebuild",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "pretest:dev": "yarn run pretest",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && yarn run posttest",
    "verify": "yarn pack && tar xf loopback-todo*.tgz && tree package && yarn run clean",
    "premigrate": "yarn run build ",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "yarn run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "rebuild": "yarn run clean && yarn run build",
    "prestart": "yarn run rebuild",
    "start": "node .",
    "prestart:dev": "yarn run prestart",
    "start:dev": "nodemon . --watch",
    "commit": "(git add .) && cz && (git push -o ci.skip)",
    "release:dev": "npx semantic-release --branches=dev --no-ci",
    "release": "npx semantic-release --branches=main --no-ci"
  },
  "dependencies": {
    "@loopback/authentication": "^11.0.0",
    "@loopback/authentication-jwt": "^0.15.0",
    "@loopback/boot": "^7.0.0",
    "@loopback/core": "^6.0.0",
    "@loopback/model-api-builder": "^6.0.0",
    "@loopback/repository": "^7.0.0",
    "@loopback/repository-tests": "^0.24.0",
    "@loopback/rest": "^14.0.0",
    "@loopback/rest-crud": "^0.18.0",
    "@loopback/rest-explorer": "^7.0.0",
    "@loopback/security": "^0.11.0",
    "@loopback/service-proxy": "^7.0.0",
    "@thirdweb-dev/auth": "^4.1.0",
    "@thirdweb-dev/sdk": "^4.0.7",
    "@ts4ocds/address-details": "^1.1.0",
    "@ts4ocds/conversions": "^1.1.0",
    "@ts4ocds/core": "^1.1.0",
    "@ts4ocds/lots": "^1.1.0",
    "@ts4ocds/metrics": "^1.1.0",
    "@ts4ocds/options": "^1.1.0",
    "@ts4ocds/requirements": "^1.1.0",
    "@ts4ocds/utils": "^1.1.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "bson": "^6.5.0",
    "casbin": "^5.27.1",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "loopback-connector-rest": "^5.0.1",
    "tslib": "^2.6.2",
    "utility-types": "^3.11.0"
  },
  "devDependencies": {
    "@loopback/build": "^11.0.0",
    "@loopback/eslint-config": "^15.0.0",
    "@loopback/http-caching-proxy": "^6.0.0",
    "@loopback/testlab": "^7.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/json-schema": "^7.0.15",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^16.18.91",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "cz-git": "^1.9.0",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "semantic-release": "^22.0.5",
    "semantic-release-cli": "^5.4.4",
    "source-map-support": "^0.5.21",
    "typescript": "~5.2.2"
  },
  "resolutions": {
    "@ts4ocds/**/typescript": "4.0.3"
  },
  "release": {
    "branches": [
      "main",
      "dev"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "Changelog"
        }
      ],
      "@semantic-release/git",
      "@semantic-release/npm"
    ]
  },
  "publishConfig": {
    "access": "restricted"
  },
  "config": {
    "access": "restricted",
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": ".commitlintrc.json"
    }
  }
}
